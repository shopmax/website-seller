<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">

    <simple-method method-name="createProductToShopMax" short-description="Create Product To ShopMax">
        <entity-one entity-name="Product" value-field="product">
            <field-map field-name="productId" from-field="parameters.productId"/>
        </entity-one>
        <if-not-empty field="product">
            <entity-one entity-name="UserLogin" value-field="sysUserLogin">
                <field-map field-name="userLoginId" value="system"/>
            </entity-one>
            <set field="createProductMap" value="${groovy: import org.ofbiz.entity.util.EntityUtil;
            Map productMap = product.getAllFields();
            productMap.remove('createdDate');
            productMap.remove('createdByUserLogin');
            productMap.remove('lastModifiedDate');
            productMap.remove('lastModifiedByUserLogin');
            productMap.remove('createdStamp');
            productMap.remove('createdTxStamp');
            productMap.remove('lastUpdatedStamp');
            productMap.remove('lastUpdatedTxStamp');
            if (productMap) return productMap;}" type="Map"/>
            <set field="createProductMap.userLogin" from-field="sysUserLogin"/>
            <set field="runTenantServiceInMap.tenantId" value="default"/>
            <set field="runTenantServiceInMap.serviceName" value="createProduct"/>
            <set field="runTenantServiceInMap.serviceParameters" from-field="createProductMap"/>
            <call-service service-name="runTenantService" in-map-name="runTenantServiceInMap"/>
        </if-not-empty>
    </simple-method>
    
    <simple-method method-name="updateProductToShopMax" short-description="Update Product To ShopMax">
        <entity-one entity-name="Product" value-field="product">
            <field-map field-name="productId" from-field="parameters.productId"/>
        </entity-one>
        <if-not-empty field="product">
            <entity-one entity-name="UserLogin" value-field="sysUserLogin">
                <field-map field-name="userLoginId" value="system"/>
            </entity-one>
            <set field="updateProductMap" value="${groovy: import org.ofbiz.entity.util.EntityUtil;
            Map productMap = product.getAllFields();
            productMap.remove('createdDate');
            productMap.remove('createdByUserLogin');
            productMap.remove('lastModifiedDate');
            productMap.remove('lastModifiedByUserLogin');
            productMap.remove('createdStamp');
            productMap.remove('createdTxStamp');
            productMap.remove('lastUpdatedStamp');
            productMap.remove('lastUpdatedTxStamp');
            if (productMap) return productMap;}" type="Map"/>
            <set field="updateProductMap.userLogin" from-field="sysUserLogin"/>
            <set field="runTenantServiceInMap.tenantId" value="default"/>
            <set field="runTenantServiceInMap.serviceName" value="updateProduct"/>
            <set field="runTenantServiceInMap.serviceParameters" from-field="updateProductMap"/>
            <call-service service-name="runTenantService" in-map-name="runTenantServiceInMap"/>
        </if-not-empty>
    </simple-method>
</simple-methods>
